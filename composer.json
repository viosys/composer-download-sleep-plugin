{
  "name": "viosys/composer-download-sleep-plugin",
  "description": "Composer plugin to sleep for a given amount of seconds before downloading a file",
  "type": "composer-plugin",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "composer-plugin-api": "^2.0"
  },
  "require-dev": {
    "composer/composer": "^2.0",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "Vio\\ComposerDownloadSleep\\": "src"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse --no-progress",
    "phpstan:strict": "phpstan analyse --level=max --no-progress"
  },
  "extra": {
    "class": "Vio\\ComposerDownloadSleep\\Plugin",
    "plugin-modifies-downloads": true
  }
}